#!/bin/sh

# find location of self, can be overridden by exporting CAST_BINDIR=/path
if [ -z "$CAST_BINDIR" ]; then
	if [ "$0" = cast ]; then
		called="$(command -v cast)"
	else
		called="$0"
	fi
	CAST_BINDIR="$(dirname "$(realpath "$called")")"
fi

cd "$CAST_BINDIR/../../etc/cast" &&
if [ "$1" = install ]; then
	shift
	./100-install "$@"
else
	./100-update
fi
